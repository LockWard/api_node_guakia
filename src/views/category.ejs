<%- layout('layouts/main.ejs') %>
<h1 class="mt-4">Categories</h1>
<div class="card">
    <div class="card-body">
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Status</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
      <% for(var i = 0; i < categ.length; i++) { %>

        <% if (categ[i].Status == true) { %>
        <tr>
            <th scope="row">
              <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck2" disabled checked>
              <label class="form-check-label" for="defaultCheck2">Enabled
              </label>
              </div>
              </th>
              <td><%= categ[i].Category %></td>
              <td><a href="/categories/<%= categ[i]._id %>" class="btn btn-warning btn-sm" >Edit</a></td>
        </tr>

        <% } else { %>

          <tr>
            <th scope="row">
              <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck2" disabled>
              <label class="form-check-label" for="defaultCheck2">Disabled
              </label>
              </div>
              </th>
              <td><%= categ[i].Category %></td>
              <td><a href="/categories/<%= categ[i]._id %>" class="btn btn-warning btn-sm" >Edit</a></td>
        </tr>

          <% } %>

            <% } %>
    </tbody>
</table>

<ul class="pagination justify-content-center">
    
</ul>
</div>
</div>